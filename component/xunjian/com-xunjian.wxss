page{
  width: 100%;
  height: 100%;
   background-color: rgb(237,239,238)
}
.main{
  width: 100%;
  height: 100%;
  overflow: scroll;
}
.header{
  width: 100%;
  height: 40%;
  background-color: white;
   box-shadow: 0px -3px 0px #eaeaea inset;
}
.header .h-body{
  height: 100%;
  width: 97%;
  margin: 0 auto;
}
.h-body .shang{
  width: 100%;
  height: 55%;
  padding-top: 10rpx;
  display: flex;
  justify-content: space-between
}
.shang .left{
  width: 66%;
  height: 100%;
}
.shang .right{
  width: 33%;
  height: 100%;
}
.h-body .zhong{
  width: 100%;
  height: 17%;
}
.h-body .xia{
  width: 100%;
  height: 25%;
}
.h-body .zhong{
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.body{
  width: 100%;
  height: 59%;
  overflow: scroll;
}
.saoma{
  background-color:rgba(233,243,255,0.7);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 100%;
}
.img{
  width: 150rpx;
  height: 150rpx;
  background-color: white;
  box-shadow: 1rpx 1rpx 1rpx 5rpx #eaeaea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img image{
  width: 70rpx;
  height: 70rpx;
}
.saoma .font,.paizhao .font{
  font-size: 30rpx;
}
.paizhao{
  background-color:rgba(247,247,247,0.7);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 100%;
}
.paizhao .font{
  line-height: 80rpx;
}
.paizhao .miaosu{
   font-size: 25rpx;
   color: #888;
}
.paizhao image{
  width: 70rpx;
  height: 70rpx;
}
.rwlist{
  color:#888;
  font-size: 28rpx;
  line-height: 55rpx;
}
.rwlist .name{
  color: black;
  font-weight: bold;
}
.pool{
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  bottom: 15%;
  right: 50rpx;
   display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-color: rgb(104,165,251);
  color: white;
  border-radius: 50%;
  font-size: 32rpx;
  box-shadow: 2px 2px 5px 2px rgba(104,165,251,0.7);
}
.pool .font{
  margin-bottom: 20rpx;
}
.pool image{
  width: 70rpx;
  height: 70rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.carimg{
  height: 250rpx;
  width: 100%;
}
.carimg image{
  height: 250rpx;
  width: 100%;
  border-radius: 20rpx;
}
.time-lq{
  display: flex;
  justify-content: space-between;
}
.pz-hover{
  background-color:rgba(247,247,247,1);
}
.sm-hover{
   background-color:rgba(233,243,255,1);
}
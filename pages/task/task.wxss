page{
  width: 100%;
  height: 100%;
   background-color: rgb(237,239,238);
}
.main{
  height: 100%;
  width:100%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.detail{
  background-color: white;
}
.detail .title:not(.zq){
   line-height: 80rpx;
  padding-left: 15rpx;
  padding-top: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  letter-spacing:1px;
}
.body{
   color: #888;
  font-size: 28rpx;
  line-height: 55rpx;
  padding-left: 15rpx;
}
.body .right{
  float: right;
  font-weight: bold;
  padding-right: 15rpx;
}
.btn{
  width: 30%;
  margin: 0 auto;
  padding-bottom: 20rpx;
}
.btn button{
  border: 1px solid #ef473a;
  height: 70rpx;
  background-color: white;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 30rpx;
}
.btn-hov{
  color:white;background-color:#ef473a !important;
}
.task-list{
  width: 96%;
  margin: 0 auto;
  padding-bottom: 30rpx;
}
.card-list{
  color: #888;
  font-size: 28rpx;
  line-height: 55rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  position: relative;
}
.ing{
  position: absolute;
  right: 35rpx;
  top: 30%;
  font-size: 30rpx;
  color: #ffd700;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
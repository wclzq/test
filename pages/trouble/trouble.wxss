page{
  width: 100%;
  height: 100%;
   background-color: rgb(237,239,238);
}
.main{
  height: 100%;
  width:100%;
}
.header{
  background-color: white;
  display: flex;
  justify-content: space-between;
  height: 7%;
 
}
.btn{
  height: 100%;
  width: 27%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn view{
  height: 70%;
  width: 80%;
}

.body{
  height: 92%;
  overflow: scroll;
}
.radios{
  width: 96%;
  margin: 0 auto;

}
.radio{
  width: 100%;
  background: white;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  line-height: 80rpx;
  margin-bottom: 10rpx;
}
.radio view{
  padding: 0 15rpx;
}
radio{
  margin-right: 30%;
}
.shuoming{
  display: flex;
  padding-left:15rpx;
  align-items: center; 
  width: 60%;
  height: 100%;
  font-size: 28rpx;
  color: #888;
}
.wux-button {
display:inline-block;
box-sizing:border-box;
margin:0;
padding:0 24rpx;
min-width:30rpx;
min-height:30rpx !important;
border:none;
border-radius:8rpx;
vertical-align:middle;
text-align:center;
text-overflow:ellipsis;
font-size:28rpx !important;
line-height:60rpx !important;
cursor:pointer;

}
.wux-button--block, .wux-button--full {
margin-top:0 !important;
margin-bottom:0 !important;

}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}